<h2><%= @post.title %></h2>
<p><%= @post.body %></p>

<hr>

<h3>Comments</h3>
<% @post.comments.each do |comment| %>
	
<div class="well">
	<p><strong><%= comment.username %></strong>: <%= comment.body %>
		<%= link_to '[x]', [comment.post, comment],
				method: :delete,
				data: {confirm: 'Are you sure?'} %></p>
</div>
<% end %>

